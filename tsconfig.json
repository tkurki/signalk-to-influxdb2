  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./src", "./node_modules/@types"],
    "target": "ES2022",
    "lib": [
      "ES2022",
      "ES2022.Intl",
      "DOM"
    ],
    "moduleResolution": "node"
  }
}
